@model List<Product>
@{
    int count = 0;
}
<div class="container">
    <div class="d-flex" style="justify-content:space-between;align-items:center">
        <h1>Product</h1>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">SKU</th>
                <th scope="col">Price</th>
                <th scope="col">Tags</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.SKU</td>
                    <td>@item.Price</td>
                    <td>@foreach(var pt in item.ProductTags)
                        {
                            @pt.Tag.Name
                        }
                    </td>
                    @* <td>
                        <div style="width:100px">
                            <img width="100%" src="~/Upload/ProductImage/@item.ProductImages.FirstOrDefault().MainImgUrl">
                        </div>
                    </td> *@
                    <td>
                        <a class="btn btn-secondary" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
